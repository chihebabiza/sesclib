<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Submajor</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add Submajor</h1>
        <form action="/add" method="POST">
            <div class="form-group">
                <label for="name" class="form-label">Submajor Name</label>
                <input type="text" class="form-control" name="name" required placeholder="Enter submajor name">
            </div>
            <div class="form-group">
                <label for="majorId" class="form-label">Select Major</label>
                <select class="form-control" name="majorId" required>
                    <option value="" disabled selected>Select a major</option>
                    <% majors.forEach(major=> { %>
                        <option value="<%= major._id %>">
                            <%= major.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Select Years</label>
                <div>
                    <% years.forEach(year=> { %>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="yearIds" value="<%= year._id %>"
                                id="year_<%= year._id %>">
                            <label class="form-check-label" for="year_<%= year._id %>">
                                <%= year.name %>
                            </label>
                        </div>
                        <% }) %>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add Submajor</button>
            <a href="/submajors" class="btn btn-secondary ml-2">Cancel</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>