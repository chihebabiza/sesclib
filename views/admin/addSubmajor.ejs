<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Submajor</title>
    <link rel="icon" href="images/favicon.ico">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <!-- css styles -->
    <link rel="stylesheet" href="css/styles.css">
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/ba27f05e10.js" crossorigin="anonymous"></script>
</head>

<body>
    <section class="colored-section" id="add-submajor">
        <div class="container-fluid">
            <form class="mx-auto login-form" action="/dashboard/submajor/add" method="POST">
                <h4 class="form-heading">Add New Submajor</h4>

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-tag"></i>
                    </span>
                    <input type="text" name="name" class="form-control" placeholder="Submajor Name" required>
                </div>

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-book"></i>
                    </span>
                    <select name="majorId" class="form-select" required>
                        <option value="" disabled selected>Select Major</option>
                        <% majors.forEach(major=> { %>
                            <option value="<%= major._id %>">
                                <%= major.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>

                <div class="mt-3">
                    <label>Select Years:</label>
                    <ul class="list-unstyled">
                        <% years.forEach(year=> { %>
                            <li>
                                <input type="checkbox" name="years" value="<%= year.name %>" id="year-<%= year.name %>">
                                <label for="year-<%= year.name %>">
                                    <%= year.name %>
                                </label>
                            </li>
                            <% }); %>
                    </ul>
                </div>

                <button type="submit" class="btn btn-primary login-btn">Add Submajor</button>
                <p class="form-text">Want to go back? <a href="/dashboard/submajors" class="form-link">View
                        Submajors</a></p>
            </form>
        </div>
    </section>
</body>

</html>