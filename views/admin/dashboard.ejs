<!-- include the head -->
<%- include('../parts/head.ejs') %>

    <!-- include nav bar -->
    <%- include('../parts/navAdmin.ejs') %>

        <!-- Fact 3 - Bootstrap Brain Component -->
        <section class="bg-light py-3 py-md-5">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                        <h2 class="mb-4 display-5 text-center">We have a proven track record of success.</h2>
                        <hr class="w-50 mx-auto mb-5 mb-xl-9 custom-border">
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row gy-4 gy-lg-0 align-items-center">
                    <div class="col-12 col-lg-6">
                        <img class="img-fluid rounded" loading="lazy" src="/images/photo_2024-09-24_10-46-56.jpg"
                            alt="Our Success">
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="row justify-content-center">
                            <div class="col-12 col-sm-6 col-lg-11">
                                <div class="row gy-4 gy-sm-0 overflow-hidden">
                                    <div class="col-6 col-sm-6">
                                        <div class="card border-0 border-bottom custom-border shadow-sm mb-4">
                                            <div class="card-body text-center p-4 p-xxl-5">
                                                <div class="icon-wrapper mb-3">
                                                    <i class="fa-solid fa-user display-4 text-primary"></i>
                                                </div>
                                                <h3 class="display-2 fw-bold mb-2">
                                                    <%= userCount %>
                                                </h3>
                                                <p class="fs-5 mb-0 text-secondary">Users</p>
                                            </div>
                                        </div>
                                        <div class="card border-0 border-bottom custom-border shadow-sm">
                                            <div class="card-body text-center p-4 p-xxl-5">
                                                <div class="icon-wrapper mb-3">
                                                    <i class="fa-solid fa-graduation-cap display-4 text-success"></i>
                                                </div>
                                                <h3 class="display-2 fw-bold mb-2">
                                                    <%= majorCount %>
                                                </h3>
                                                <p class="fs-5 mb-0 text-secondary">Majors</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6 col-sm-6">
                                        <div class="card border-0 border-bottom custom-border shadow-sm mb-4">
                                            <div class="card-body text-center p-4 p-xxl-5">
                                                <div class="icon-wrapper mb-3">
                                                    <i class="fa-solid fa-file-alt display-4 text-warning"></i>
                                                </div>
                                                <h3 class="display-2 fw-bold mb-2">
                                                    <%= documentCount %>
                                                </h3>
                                                <p class="fs-5 mb-0 text-secondary">Documents</p>
                                            </div>
                                        </div>
                                        <div class="card border-0 border-bottom custom-border shadow-sm">
                                            <div class="card-body text-center p-4 p-xxl-5">
                                                <div class="icon-wrapper mb-3">
                                                    <i class="fa-solid fa-book-open display-4 text-info"></i>
                                                </div>
                                                <h3 class="display-2 fw-bold mb-2">
                                                    <%= submajorCount %>
                                                </h3>
                                                <p class="fs-5 mb-0 text-secondary">Sub-Majors</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>