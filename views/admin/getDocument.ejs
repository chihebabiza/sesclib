<%- include('../parts/head') %>
    <%- include('../parts/navAdmin') %>

        <body>
            <section class="white-section">
                <div class="container-fluid">
                    <!-- Title -->
                    <h1 id="year1" class="year-title text-center">
                        Documents for <%= subject.name %>
                    </h1>
                    <hr>

                    <!-- Add Document Button -->
                    <div class="d-flex justify-content-center mb-4">
                        <a href="/dashboard/subject/<%= subject._id%>/document/add" class="btn btn-success">Add
                            Document</a>
                    </div>

                    <!-- Documents List -->
                    <% if (documents.length> 0) { %>
                        <div class="files-col">
                            <ul class="list-group list-group-flush">
                                <% documents.forEach(document=> { %>
                                    <li
                                        class="files-btn list-group-item d-flex flex-column flex-md-row justify-content-between align-items-center mb-2">
                                        <!-- Document Name and Type -->
                                        <button class="btn text-start" type="button">
                                            <span class="files-icon"><i class="fa-solid fa-file-pdf"></i></span>
                                            <%= document.name %> - <%= document.type.name %>
                                        </button>

                                        <!-- Document Actions (kept in a row on all screen sizes) -->
                                        <div class="d-flex flex-wrap justify-content-md-end">
                                            <form
                                                action="/dashboard/subject/<%= subject._id%>/document/update/<%= document._id %>"
                                                method="GET" style="display:inline;">
                                                <button type="submit"
                                                    class="btn btn-warning btn-sm me-2">Update</button>
                                            </form>
                                            <form
                                                action="/dashboard/subject/<%= subject._id%>/document/delete/<%= document._id %>"
                                                method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm me-2"
                                                    onclick="return confirm('Are you sure you want to delete this document?');">Delete</button>
                                            </form>
                                            <a href="<%= document.path %>" target="_blank"
                                                class="mt-2 mt-md-0 btn btn-primary sign-btn btn-sm">View</a>
                                        </div>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                        <% } else { %>
                            <!-- No Documents Alert -->
                            <div class="alert alert-warning text-center" role="alert">
                                No Documents found for this Subject.
                            </div>
                            <% } %>

                                <!-- Back to Subjects Button -->
                                <div class="text-center mt-4">
                                    <a href="/dashboard/major/<%= subject.major._id %>/year/<%= subject.year._id%>/subjects"
                                        class="btn btn-secondary sign-btn">Back to Subjects</a>
                                </div>
                </div>
            </section>
        </body>

        </html>