<%- include('../parts/head') %>
    <%- include('../parts/navAdmin') %>
        <section class="white-section">
            <div class="container-fluid">
                <h1 id="year1" class="year-title">
                    Majors
                </h1>
                <hr>
                <a href="/dashboard/major/add" class="btn btn-success mb-5">Add New Major</a>

                <% if (majors.length> 0) { %>
                    <div class="files-col">
                        <ul class="list-group list-group-flush">
                            <% majors.forEach((major, index)=> { %>
                                <li class="files-btn list-group-item d-flex justify-content-between align-items-center">
                                    <button class="btn" type="button">
                                        <span class="files-icon"><i class="fa-solid fa-graduation-cap"></i></span>
                                        <%= major.name %>
                                    </button>
                                    <div class="d-flex flex-wrap justify-content-md-end">
                                        <a href="/dashboard/major/update/<%= major._id %>"
                                            class="btn btn-warning btn-sm me-2 mb-2 mb-md-0">Update</a>

                                        <form action="/dashboard/major/delete/<%= major._id %>" method="POST"
                                            style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm me-2"
                                                onclick="return confirm('Are you sure you want to delete this major?');">Delete</button>
                                        </form>

                                        <a href="/dashboard/major/<%= major._id %>/years"
                                            class="btn btn-primary sign-btn btn-sm">View Submajors</a>
                                    </div>
                                </li>
                                <% }); %>
                        </ul>
                        <% } else { %>
                            <div class="alert alert-warning" role="alert">
                                No Majors available.
                            </div>
                            <% } %>
                    </div>
            </div>
        </section>