<%- include('../parts/head') %>

    <body>
        <section class="colored-section" id="update-document">
            <div class="container-fluid min-vh-100">
                <!-- Update Document Form -->
                <form action="/dashboard/subject/<%= subject._id %>/document/update/<%= document._id %>" method="POST"
                    enctype="multipart/form-data" class="mx-auto login-form form">
                    <h4 class="form-heading">Update Document for <%= subject.name %>
                    </h4>

                    <!-- Select Document Type from subject.types -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fa-solid fa-tags"></i>
                        </span>
                        <select class="form-select" name="type" required>
                            <% subject.types.forEach(type=> { %>
                                <option value="<%= type._id %>" <%=document.type._id.toString()===type._id.toString()
                                    ? 'selected' : '' %>>
                                    <%= type.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <!-- Current Document Name -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fa-solid fa-file-alt"></i>
                        </span>
                        <input type="text" name="name" class="form-control" placeholder="Document Name"
                            value="<%= document.name %>" required>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary login-btn">Update Document</button>

                    <!-- Back to Subject Page Link -->
                    <p class="form-text">Want to go back? <a href="/dashboard/subject/<%= subject._id %>/documents"
                            class="form-link">Back to Subject</a></p>
                </form>
            </div>
        </section>
    </body>

    </html>