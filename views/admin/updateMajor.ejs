<%- include('../parts/head') %>

    <div class="container mt-5">
        <h1>Update Major</h1>
        <% if (major) { %>
            <form action="/dashboard/major/update/<%= major._id %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Major Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= major.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Major Image</label>
                    <input type="file" class="form-control" id="image" name="image">
                </div>
                <button type="submit" class="btn btn-primary">Update Major</button>
            </form>
            <% } else { %>
                <p>Major not found.</p>
                <% } %>
    </div>

    </body>

    </html>