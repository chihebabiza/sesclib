<%- include('../parts/head') %>

    <div class="container mt-5">
        <h1 class="mb-4">Documents for Subject: <%= subject.name %>
        </h1>

        <% if (documents.length> 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% documents.forEach((document, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= document.name %>
                            </td>
                            <td>
                                <a target="_blank" href="/documents/<%= document.name %>"
                                    class="btn btn-primary">View</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <div class="alert alert-warning" role="alert">
                    No documents found for this subject.
                </div>
                <% } %>

                    <a href="/major/<%= majorId %>" class="btn btn-secondary">Back to Subjects</a>

    </div>
    </body>

    </html>